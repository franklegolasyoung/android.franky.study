<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalCir">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="155dp"
            android:gravity="center"
            android:text="圆形"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginTop="49dp"
            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@+id/t1"
            android:text="周长"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_alignStart="@+id/t2"
            android:layout_alignLeft="@+id/t2"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="20dp"
            android:text="面积"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/t1"
            android:layout_alignLeft="@+id/t1"
            android:layout_alignTop="@+id/t2"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="0.0000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/t1"
            android:layout_alignLeft="@+id/t1"
            android:layout_alignTop="@+id/t5"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="0.0000"
            android:textSize="30dp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>